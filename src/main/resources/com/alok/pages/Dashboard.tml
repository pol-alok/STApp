<html t:type="layout" title="Employee Details | STApp"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<div class="row">
    <div class="col-md-12 shadow mb-5 rounded mt-5">
        <h2 class="text-center">Details</h2>
        <hr/>
        <table class="table table-hover">
            <thead class="thead-light">
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Age</th>
                <th scope="col">Address</th>
                <th scope="col">Email</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>${employee.firstName}</td>
                <td>${employee.lastName}</td>
                <td>${employee.age}</td>
                <td>${employee.address}</td>
                <td>${employee.email}</td>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <t:eventlink event="refreshZone" t:zone="detailsZone" class="btn btn-success">Display all employee</t:eventlink>
</div>
<div class="row">
    <t:zone t:id="detailsZone" id="detailsZone">
        <t:if test="listOfEmployees">
            <div class="col-md-12 shadow mb-5 rounded mt-5">
                <h2 class="text-center">Employees Details</h2>
                <hr/>
                <t:grid source="listOfEmployees" row="employeeDetailsDTO" exclude="version" rowsPerPage="4"
                        pagerPosition="top">
                    <p:idCell>
                        <t:pagelink page="Dashboard" context="employeeDetailsDTO.id">${employeeDetailsDTO.id}
                        </t:pagelink>
                    </p:idCell>
                </t:grid>
            </div>
        </t:if>
    </t:zone>
</div>
</html>

<html t:type="layout" title="Employee Details | STApp"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<div class="row">
    <div class="col-md-12 shadow mb-5 rounded mt-5">
        <h2 class="text-center">Employees Details</h2>
        <hr/>
        <t:grid source="employees" row="employee" exclude="version" rowsPerPage="4" pagerPosition="top">
            <p:idCell>
                <t:pagelink page="Dashboard" context="employee.id">${employee.id}</t:pagelink>
            </p:idCell>
        </t:grid>
    </div>
</div>
</html>

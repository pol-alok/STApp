<html t:type="layout" title="Employee Details | STApp"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
<div class="row mt-5">
    <t:eventlink event="refreshZone" t:zone="detailsZone" class="btn btn-success col-md-6 col-md-offset-3">Display all employee</t:eventlink>
</div>
<div class="row">
    <div class="col-md-12 shadow mb-5 rounded mt-5">
        <t:zone t:id="detailsZone" id="detailsZone">
            <t:if test="employees">
                <h2 class="text-center">Employees Details</h2>
                <hr/>
                <t:grid source="employees" row="employee" add="action" exclude="version" rowsPerPage="4"
                        pagerPosition="top">
                    <p:idCell>
                        <t:pagelink page="SingleEmployee" context="employee.id">${employee.id}
                        </t:pagelink>
                    </p:idCell>
                    <p:actionCell>
                        <t:pagelink page="EditEmployee" context="employee.id" href="#">Edit</t:pagelink>
                    </p:actionCell>
                </t:grid>
            </t:if>
        </t:zone>
    </div>
</div>
</html>

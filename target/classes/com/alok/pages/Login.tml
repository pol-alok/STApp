<html t:type="layout" title="Employee Login | STApp"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="col-md-6 col-md-offset-3 shadow p-3 mb-5 bg-white rounded mt-5">
        <t:form t:id="login">
            <h2 class="text-center">Employee sign in</h2>
            <hr/>
            <div class="form-group mt-2">
                <t:textfield class="form-control" t:id="email" validate="required" placeholder="Email address"/>
            </div>
            <div class="form-group mt-2">
                <t:passwordfield class="form-control" t:id="password" validate="required" placeholder="Password"/>
            </div>
            <div class="checkbox">
                <!--        <label><input type="checkbox" name="remember"> Remember me</label>-->
            </div>
            <div class="form-group">
                <t:submit class="btn btn-large btn-success" value="Sign in"/>
            </div>

        </t:form>
    </div>
</div>
</html>